@page
@model RazorPagesMegadesk.Pages.Desks.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        Name Search: <input type="text" asp-for="SearchName" class="highlight">
        <input type="submit" value="Filter">
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].Width)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].Depth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].Drawers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].Surface)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].RushOrder)
            </th>
            <th>
                <a asp-page="Index" asp-route-sortOrder="@Model.DateSort">
                    @Html.DisplayNameFor(model => model.Desk[0].Date)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].TotalCost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Desk) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Width)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Depth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Drawers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surface)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RushOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCost)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a><span class="hide"> |</span>
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a><span class="hide"> |</span>
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
